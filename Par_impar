

#include<stdio.h>

int main(){

    int num = 0, i = 1, resto = 0;

    while(i<=10){
        printf("Digite um numero\n");
        scanf("%d",&num);
        
        resto = num % 2;
	
        if ( resto == 0 ) {
	        printf("Par");
        }
        else{
  	        printf("Impar");
        }
        printf("\n");
        i++;
        
    }
}
